<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Add Recipe</h1>
        <div class="container col-8 offest-3">
            <form action="/recipes" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="recipe[name]" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="instructions">Instructions</label>
                    <textarea class="form-control" type="text" id="instructions" name="recipe[instructions]"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="recipe[image]" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="cookTime">Cook Time</label>
                    <input class="form-control" type="number" id="cookTime" name="recipe[cookTime]" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="prepTime">Prep Time</label>
                    <input class="form-control" type="number" id="prepTime" name="recipe[prepTime]" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="totalTime">Total Time</label>
                    <input class="form-control" type="number" id="totalTime" name="recipe[totalTime]" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="yields">Yields</label>
                    <input class="form-control" type="text" id="yields" name="recipe[yields]" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Recipe</button>
                </div>
            </form>
        </div>
        <div class="mb-3">
            <a href="/recipes">Back to All Recipes</a>
        </div>
    </div>
</div>
