<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Recipe</h1>
    <div class="container col-8 offset-3">
        <form action="/recipes/<%= recipe._id %>?_method=PUT " method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="recipe[name]" value="<%= recipe.name %> " />
            </div>
            <div class="mb-3">
                <label class="form-label" for="instructions">Instructions</label>
                <textarea class="form-control" type="text" id="instructions" name="recipe[instructions]">
<%= recipe.instructions %></textarea
                >
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="recipe[image]" value="<%= recipe.image %> " />
            </div>
            <div class="mb-3">
                <label class="form-label" for="cookTime">Cook Time</label>
                <input
                    class="form-control"
                    type="number"
                    id="cookTime"
                    name="recipe[cookTime]"
                    value="<%= recipe.cookTime %>"
                />
            </div>
            <div class="mb-3">
                <label class="form-label" for="prepTime">Prep Time</label>
                <input
                    class="form-control"
                    type="number"
                    id="prepTime"
                    name="recipe[prepTime]"
                    value="<%= recipe.prepTime %>"
                />
            </div>
            <div class="mb-3">
                <label class="form-label" for="totalTime">Total Time</label>
                <input
                    class="form-control"
                    type="number"
                    id="totalTime"
                    name="recipe[totalTime]"
                    value="<%= recipe.totalTime %>"
                />
            </div>
            <div class="mb-3">
                <label class="form-label" for="yields">Yields</label>
                <input
                    class="form-control"
                    type="text"
                    id="yields"
                    name="recipe[yields]"
                    value="<%= recipe.yields %>"
                />
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Recipe</button>
            </div>
        </form>
        <div>
            <a href="/recipes/<%= recipe._id %> ">Back to Recipe</a>
        </div>
    </div>
</div>
