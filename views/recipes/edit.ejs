<% layout('layouts/boilerplate') %>
        <h1>EDIT RECIPE</h1>
        <form action="/recipes/<%= recipe._id %>?_method=PUT " method="POST">
            <div>
                <label for="name">Name</label>
                <input type="text" id="name" name="recipe[name]" value="<%= recipe.name %> "/>
            </div>
            <div>
                <label for="instructions">Instructions</label>
                <input type="text" id="instructions" name="recipe[instructions]" value="<%= recipe.instructions %> "/>
            </div>
            <div>
                <label for="name">Cook Time</label>
                <input type="text" id="name" name="recipe[cookTime]" value="<%= recipe.cookTime %>" />
            </div>
            <div>
                <label for="name">Total Time</label>
                <input type="text" id="name" name="recipe[totalTime]" value="<%= recipe.totalTime %> "/>
            </div>
            <div>
                <label for="name">Yields</label>
                <input type="text" id="name" name="recipe[yields]" value="<%= recipe.yields %>" />
            </div>
                <button>Update Recipe</button>
            </div>
        </form>
        <div>
            <a href="/recipes/<%= recipe._id %> ">Back to Recipe</a>
        </div>

