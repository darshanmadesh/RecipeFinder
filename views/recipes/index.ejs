<% layout('layouts/boilerplate') %>
<h1 class="card-title mb-2">All Recipes</h1>
<% for (let recipe of recipes) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img
                class="image-fluid"
                src="<%= recipe.image %> "
                alt="<%= recipe.name %> "
                style="width: 100%; height: 300px"
            />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title"><%= recipe.name %></h3>
                <h5 class="card-title">Total Time : <%= recipe.totalTime %></h5>
                <h5 class="card-title">Total Ingredients : <%= recipe.ingredients.length %></h5>
                <h5 class="card-title">Yields : <%= recipe.yields %></h5>
                <a href="/recipes/<%= recipe._id %> " class="btn btn-primary">View Recipe</a>
            </div>
        </div>
    </div>
</div>
<% } %>
